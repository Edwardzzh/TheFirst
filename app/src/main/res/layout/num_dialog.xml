<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="46dp"
            android:id="@+id/num_dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="取消"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/num_dialog_tex_num"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="价格"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/num_dialog_tex_0"
            android:layout_weight="1"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:onClick="numDaialogOnclick"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="0" />
        <TextView
            android:id="@+id/num_dialog_tex_1"
            android:layout_weight="1"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:onClick="numDaialogOnclick"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="1"
            />
        <TextView
            android:id="@+id/num_dialog_tex_2"
            android:layout_weight="1"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:onClick="numDaialogOnclick"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num_dialog_tex_10"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:onClick="numDaialogOnclick"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10" />

        <TextView
            android:id="@+id/num_dialog_tex_100"
            android:layout_width="78dp"
            android:layout_height="39dp"
            android:onClick="numDaialogOnclick"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100" />

        <TextView
            android:id="@+id/num_dialog_edi_else"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:onClick="numDaialogOnclick"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="其他" />
    </LinearLayout>
</LinearLayout>
