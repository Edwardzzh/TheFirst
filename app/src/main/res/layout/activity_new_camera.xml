<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/camera_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/camera_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan:"
            android:gravity="left" />
        <TextView
            android:id="@+id/txt_new_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:lines="1" />
    </LinearLayout>


    <EditText
        android:id="@+id/camera_edittext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="填写描述..."
        android:gravity="left|top"
        android:background="@null"/>

    <ImageView
        android:id="@+id/camera_photograph"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="show"
        android:text="拍照"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-12dp">

        <Button
            android:id="@+id/camera_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签："
            android:onClick="labelDialog"
            android:gravity="left" />
        <TextView
            android:id="@+id/txt_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="numDialog"
            android:id="@+id/camera_select_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量："
            android:gravity="left"/>
        <TextView
            android:id="@+id/txt_select_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-12dp">
        <Button
            android:id="@+id/camera_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格："
            android:gravity="left"
            />
        <TextView
            android:id="@+id/txt_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-12dp">
        <Button
            android:onClick="locationDialog"
            android:id="@+id/camera_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="位置：" />
        <TextView
            android:id="@+id/txt_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/camera_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒（过期、借还、通知等）："
            android:gravity="left"/>
        <TextView
            android:id="@+id/txt_warn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-12dp">
        <Button
            android:id="@+id/camera_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期："
            android:gravity="left"
            />
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:lines="1"/>
    </LinearLayout>


</LinearLayout>
